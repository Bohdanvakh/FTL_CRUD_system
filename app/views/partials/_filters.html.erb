<%= form_tag path, method: :get do %>
    <div class="d-flex justify-content-between mb-3 p-3 form-group">
        <div class="d-flex flex-column form-group">
            <%= label_tag :by_category, "Category", class: "form-label" %>
            <%= select_tag :by_category, options_for_select(Category.all.map { |c| [c.name, c.id] }, params[:by_category]), include_blank: "Select", class: "form-select", id: "filter_category" %>
        </div>
        <div class="d-flex flex-column">
            <%= label_tag "by_amount[min]", "Min Amount", class: "form-label" %>
            <%= text_field_tag "by_amount[min]", params.dig(:by_amount, :min), class: "form-control", id: "min_amount" %>
        </div>
        <div class="d-flex flex-column">
            <%= label_tag "by_amount[max]", "Max Amount", class: "form-label" %>
            <%= text_field_tag "by_amount[max]", params.dig(:by_amount, :max), class: "form-control", id: "max_amount" %>
        </div>
        <%= submit_tag I18n.t("btns.filter"), class: "btn btn-primary w-25" %>
    </div>
<% end %>
