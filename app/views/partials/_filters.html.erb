<%= form_tag path, method: :get do %>
    <div class="d-flex justify-content-between mb-3 p-3 form-group">
        <div class="d-flex flex-column form-group">
            <%= label_tag :by_category, "Category", class: "form-label" %>
            <%= select_tag :by_category, options_for_select(Category.all.map { |c| [c.name, c.id] }, params[:by_category]), required: true, include_blank: "Select", class: "form-select" %>
        </div>
        <div class="d-flex flex-column">
            <%= label_tag "by_amount[min]", "Minimum Amount", class: "form-label" %>
            <%= text_field_tag "by_amount[min]", params.dig(:by_amount, :min), required: true, class: "form-control" %>
        </div>
        <div class="d-flex flex-column">
            <%= label_tag "by_amount[max]", "Minimum Amount", class: "form-label" %>
            <%= text_field_tag "by_amount[max]", params.dig(:by_amount, :max), required: true, class: "form-control" %>
        </div>
        <%= submit_tag "Filter", class: "btn btn-primary w-25" %>
    </div>
<% end %>
